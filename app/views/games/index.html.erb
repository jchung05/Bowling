<p id="notice"><%= notice %></p>

<h1>Obligatory Your Mom Joke</h1>

<table border="1">
  <thead>
    <tr>
      <th width=100px>Player Name</th>
      <th width=75px>Current Frame</th>
      <th width=50px>Attempt</th>
      <th width=50px>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.getName %></td>
        <td><%= game.getFrame %></td>
	<td><%= game.getAttempt %></td>
        <td><%= game.score %></td>
        <td width=35px><%= link_to 'Show', game %></td>
        <td width=35px><%= link_to 'Edit', edit_game_path(game) %></td>
        <td width=35px><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

