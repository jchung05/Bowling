<p id="notice"><%= notice %></p>

<p>
  <%= if !@game.over
        button_to "Bowl", bowl_game_path(@game), :method => :put
      end %><br/>
  <%= 
        button_to "Reset Game", reset_game_path(@game), :method => :put
       %>
</p>

<p>
  <strong>Frame:</strong>
  <%= @game.getFrame %>
</p>

<p>
  <strong>Attempt:</strong>
  <%= @game.getAttempt %>
</p>

<p>
  <strong>Index:</strong>
  <%= @game.index %>
</p

<p>
  <strong>Score:</strong>
  <%= @game.score %>
</p>

<table border="1">
    <thead>
        <tr>
            <th width=50px>Frame</th>
            <th colspan="2" width=50px>1</th>
            <th colspan="2" width=50px>2</th>
            <th colspan="2" width=50px>3</th>
            <th colspan="2" width=50px>4</th>
            <th colspan="2" width=50px>5</th>
            <th colspan="2" width=50px>6</th>
            <th colspan="2" width=50px>7</th>
            <th colspan="2" width=50px>8</th>
            <th colspan="2" width=50px>9</th>
            <th colspan="3" width=75px>10</th>
	    <th>Total Score</th>
        </tr>
    </thead>
    <tbody>
        <tr align="right">
	    <td><%= @game.name %></td>

            <%= @game.rolls.each do |item| %>
            <td><%= item.frameScore %></td>
            <% end %>

	    <td><%= @game.score %></td>
        </tr>
    </tbody>
</table>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
